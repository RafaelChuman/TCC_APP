<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TCC" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="buttonStyle">@style/CustomButton</item>

    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/popOs_textBox_border_500</item>
        <item name="boxBackgroundColor">@color/popOs_textBox_background_500</item>
        <item  name="textOutlineColor">@color/popOs_textBox_text_500</item>
        <item name="hintTextAppearance">@style/CustomHintStyle</item>
        <item name="android:textColorHint">@color/popOs_textBox_text_500</item>
    </style>

    <style name="CustomHintStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/popOs_textBox_text_500</item>
        <item name="android:textColorHighlight">@color/popOs_textBox_text_500</item>
        <item name="android:textColorHint">@color/popOs_textBox_text_500</item>
        <item name="android:textColorHintInverse">@color/popOs_textBox_text_500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTextInputEditTextStyle" parent="@style/Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/popOs_textBox_text_500</item>
        <item  name="textInputOutlinedStyle">@style/CustomHintStyle</item>
        <item name="textFillColor">@color/popOs_textBox_text_500</item>
        <item name="android:textColorHint">@color/popOs_textBox_text_500</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="hintTextAppearance">@style/CustomHintStyle</item>
        <item name="editTextColor">@color/popOs_textBox_text_500</item>
        <item name="android:textSize">16sp</item>
    </style>



    <style name="Base.Theme.TCC" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/popOs_textBox_text_500</item>
        <item name="colorAccent">@color/popOs_textBox_text_500</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/popOs_textBox_text_500</item>

        <item name="android:windowBackground">@color/popOs_background_500</item>

        <item name="textInputStyle">@style/CustomTextInputStyle</item>

        <item name="editTextStyle">@style/CustomTextInputEditTextStyle</item>

        <item name="buttonStyle">@style/CustomButton</item>

    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button.TextButton">

        <!--        <item name="android:textColorPrimary">@color/popOs_button_text_900</item>-->
        <!--        <item name="colorPrimary">@color/popOs_button_background_900</item>-->


        <item name="android:textColor">@color/popOs_button_text_500</item>
        <item name="android:backgroundTint">@color/popOs_button_background_500</item>
        <item name="android:padding">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>